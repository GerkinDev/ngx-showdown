{
  "name": "ngx-showdown",
  "description": "Angular X Showdown Module.",
  "version": "0.0.0-semantically-released",
  "license": "MIT",
  "author": {
    "name": "Yisrael Eliav",
    "email": "yisraelx@gmail.com",
    "url": "https://github.com/yisraelx/"
  },
  "main": "lib/index.js",
  "browser": "bundles/ngx-showdown.umd.js",
  "typings": "lib/index.d.ts",
  "files": [
    "bundles",
    "lib",
    "LICENSE",
    "README.md"
  ],
  "keywords": [
    "ng",
    "ng2",
    "ngx",
    "angular",
    "angular2",
    "angularx",
    "markdown",
    "md",
    "showdown"
  ],
  "scripts": {
    "build": "run-s build:lib build:bundles build:demo",
    "build:lib": "ngc --project src",
    "build:bundles": "webpack --progress --profile --bail",
    "build:demo": "webpack --config demo/webpack.config.js --progress --profile --bail",
    "build:gh-pages": "npm run build:demo -- --output-public-path /ngx-showdown/",
    "ci:script": "run-s ready",
    "ci:after": "run-s coverage:report semantic-release ci:deploy",
    "ci:deploy": "run-s build:gh-pages && git config --global user.email 'gh-pages@localhost' && git config --global user.name 'gh-pages' && gh-pages -d demo/build -r https://$GH_TOKEN@github.com/yisraelx/ngx-showdown.git -m \"chore: update\" -x",
    "coverage:check": "istanbul check-coverage --statements 80 --branches 80 --functions 80 --lines 80",
    "coverage:report": "codecov -f coverage/*.json",
    "clean": "rimraf lib bundles demo/build coverage",
    "cm": "git-cz",
    "commitmsg": "validate-commit-msg",
    "demo": "webpack-dev-server --config demo/webpack.config.js --progress",
    "deploy": "run-s build:gh-pages && gh-pages -d demo/build",
    "lint": "run-s lint:*",
    "lint:demo": "tslint demo/src/**/*.ts",
    "lint:lib": "tslint src/**/*.ts",
    "lint:test": "tslint test/**/*.ts",
    "precommit": "run-s ready",
    "prepublish": "run-s build:lib build:bundles",
    "ready": "run-s clean lint test coverage:check",
    "start": "run-s demo",
    "test": "karma start",
    "watch:lib": "tsc --project src --watch",
    "watch:test": "npm test -- --auto-watch --no-single-run",
    "semantic-release": "semantic-release"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yisraelx/ngx-showdown.git"
  },
  "bugs": {
    "url": "https://github.com/yisraelx/ngx-showdown/issues"
  },
  "homepage": "http://yisraelx.github.io/ngx-showdown",
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    },
    "validate-commit-msg": {
      "helpMessage": "Commit message violates the rules defined for this project. Please, execute `npm run cm` to generate a correct commit message with `commitizen`"
    }
  },
  "dependencies": {
    "@types/showdown": "^1.7.5"
  },
  "peerDependencies": {
    "@angular/common": "^6.0.0",
    "@angular/core": "^6.0.0",
    "showdown": "^1.8.6"
  },
  "devDependencies": {
    "@angular/animations": "^6.0.0",
    "@angular/cdk": "^6.0.1",
    "@angular/common": "^6.0.0",
    "@angular/compiler": "^6.0.0",
    "@angular/compiler-cli": "^6.0.0",
    "@angular/core": "^6.0.0",
    "@angular/forms": "^6.0.0",
    "@angular/http": "^6.0.0",
    "@angular/material": "^6.0.1",
    "@angular/platform-browser": "^6.0.0",
    "@angular/platform-browser-dynamic": "^6.0.0",
    "@angular/router": "^6.0.0",
    "@types/core-js": "^2.5.0",
    "@types/jasmine": "^2.8.8",
    "@types/node": "^10.9.4",
    "@types/webpack": "^4.4.11",
    "angular2-template-loader": "^0.6.2",
    "clean-webpack-plugin": "^0.1.19",
    "codecov": "^3.1.0",
    "codelyzer": "^4.4.4",
    "commitizen": "^2.10.1",
    "core-js": "^2.5.7",
    "css-loader": "^1.0.0",
    "cz-conventional-changelog": "^2.1.0",
    "file-loader": "^2.0.0",
    "gh-pages": "^1.2.0",
    "hammerjs": "^2.0.8",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^0.14.3",
    "istanbul": "^0.4.5",
    "istanbul-instrumenter-loader": "^3.0.1",
    "jasmine-core": "^3.2.1",
    "karma": "^3.0.0",
    "karma-coverage": "^1.1.2",
    "karma-jasmine": "^1.1.2",
    "karma-phantomjs-launcher": "^1.0.4",
    "karma-remap-coverage": "^0.1.5",
    "karma-source-map-support": "^1.3.0",
    "karma-webpack": "^3.0.4",
    "mini-css-extract-plugin": "0.4.1 || >=0.4.3",
    "npm-run-all": "^4.1.3",
    "null-loader": "^0.1.1",
    "raw-loader": "^0.5.1",
    "rimraf": "^2.6.2",
    "rxjs": "^6.3.2",
    "semantic-release": "^15.9.14",
    "showdown": "^1.8.6",
    "style-loader": "^0.23.0",
    "ts-loader": "^5.0.0",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "typescript": "2.7.2",
    "validate-commit-msg": "^2.14.0",
    "webpack": "^4.17.2",
    "webpack-cli": "^3.1.0",
    "webpack-dev-server": "^3.1.8",
    "yarn": "^1.6.0",
    "zone.js": "^0.8.26"
  }
}
